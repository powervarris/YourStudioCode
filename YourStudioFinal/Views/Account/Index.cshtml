@{
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link href="~/fonts/style.css" rel="stylesheet"/>

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Style -->
    <link href="~/css/first/login.css" rel="stylesheet"/>

    <title>Login #2</title>
</head>
<body>
    @{
    		if (TempData["Error"] != null)
    		{
    			<script>
    			alert("@TempData["Error"]");
    			</script>	
    		}
    	}
<header>
    <div class="container-fluid">
        <div class="row">
            <!-- Left side content, taking up 50% -->
            <div class="col-md-6">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">

                    <span>
                        <a href="#" class=""></a>
                        <img src="~/logo.png" class="logonav" alt="" id="img2">
                        <img src="~/logo2.png" class="logonav2" alt="" id="img2">
                    </span>
                </a>

            </div>
            <!-- Right side content, taking up 50% -->
            <div class="col-md-6" style="background-color:#FDF8F2">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light " style="background-color:#FDF8F2">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" style="background-color:#FDF8F2">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="GalleryCustomer" asp-action="Index">Gallery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Packages" asp-action="Index">Packages</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="Index">Booking</a>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inquiry" asp-action="clientInquiry">Inquiry</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Login</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
<div class="d-lg-flex half" style="background-image: url('background.png');">
    <div class="d-lg-flex half">
        <div class="d-lg-flex half"></div>
        <div class="bg order-1 order-md-2" id="img1">
            <img src="~/img2.jpg" style="transform:rotate(-10deg)"/>
        </div>
        <div class="bg order-1 order-md-2" id="img1">
            <img src="~/img1.jpg" style="margin-left:310px; z-index:3"/>
        </div>
        <div class="bg order-1 order-md-2" id="img1">
            <img src="~/img3.jpg"style="margin-left:600px; transform:rotate(10deg)"/>
        </div>
    </div>

    <div class="contents order-2 order-md-1">


        <div class="container">
            <div class="row align-items-center justify-content-center" style="background-color:white">
                <div class="col-md-7">
                    <div class="greeting-container">
                        <h3 id="greeting"><strong></strong></h3>
                    </div>
                    <div>



                    </div>
                    <form asp-action="loginUser" method="post">
                        <div class="form-group first">
                            <input type="text" class="form-control" name="UserName" placeholder="Username" id="username">
                        </div>
                        <div class="form-group last mb-3">
                            <input type="password" class="form-control" name="password" placeholder="Password" id="password">
                        </div>
                        <div class="d-flex mb-5 align-items-center">
                            <p class="" style="color:black">No Acccount Yet? <a class="link-danger" style="color:blue" asp-action="Register" asp-controller="Account">Sign up</a></p>
                            <span class="ml-auto"><a href="#" class="forgot-pass" style="color:blue">Forgot Password?</a></span>
                        </div>
                        <input type="submit" value="LOG IN" class="btn btn-block btn-primary" style="font-family:'Palatino Linotype';font-size:30px">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<i class="bi bi-facebook"></i>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/main.js"></script>
<script src="~/js/popper.min.js"></script>
<script>
        var currentHour = new Date().getHours();

        var greetingElement = document.getElementById("greeting");
       
        if (currentHour >= 0 && currentHour < 12) {
            greetingElement.innerHTML = "<h1>GOOD MORNING</h1>";
        } else if (currentHour >= 12 && currentHour < 18) {
            greetingElement.innerHTML = "<h1>GOOD AFTERNOON</h1>";
        } else {
            greetingElement.innerHTML = "<h1>GOOD EVENING</h1>";
        }
    </script>
</body>
</html>