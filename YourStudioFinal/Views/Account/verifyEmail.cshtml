@model ForgetPassword

@{
    ViewData["Title"] = "Verify email";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link href="~/fonts/style.css" rel="stylesheet" />

    <!-- Style -->
    <link href="~/css/first/verify.css" rel="stylesheet" />
    <title>Login #2</title>
</head>
<body>
    @{
        if (TempData["Error"] != null)
        {
            <script>
                alert("@TempData["Error"]");
            </script>
        }
    }
    <header>
    </header>

    <div class="body-bg">
        <div class="row g-0">
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <div class="greeting-container">
                                    <h3 id="greeting"><strong></strong></h3>
                                </div>
                                <form action="#!">
                                    <div class="form-floating mb-3" style="text-align: center;">
                                        <input type="text" class="form-control" name="otp" id="otp" placeholder="102941" maxlength="6" required>
                                        <label for="text" class="form-label">OTP</label>
                                        <input type="text" name="Fname" value="@TempData["Fname"]" hidden>
                                        <input type="text" name="Lname" value="@TempData["Lname"]" hidden>
                                        <input type="text" name="UserName" value="@TempData["UserName"]" hidden>
                                        <input type="text" name="password" value="@TempData["password"]" hidden>
                                        <input type="text" name="mobileNumber" value="@TempData["mobileNumber"]" hidden>
                                        <input type="text" name="Email" value="@TempData["Email"]" hidden>
                                        <p style="margin: 20px 0;">Enter the One Time Password (OTP) sent to your email</p>
                                        @if(TempData["OtpError"] != null)
                                        {
                                            <p style="color: red;">@TempData["OtpError"]</p>
                                        }
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit" asp-action="verifyAccountOtp" asp-controller="Account">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kanawan col-md-8 col-lg-6">
                <div class="right d-flex align-items-center py-5">
                </div>
            </div>
        </div>
    </div>
<script>
        window.onload = function () {
            document.querySelector('form').addEventListener('submit', function(event) {
                    event.preventDefault(); 
                    
                    });
            
            const kanawan = document.querySelector('.kanawan');

    
            const resizeBackground = () => {
                const zoomLevel = window.devicePixelRatio;
                const width = kanawan.offsetWidth * zoomLevel;
                const height = kanawan.offsetHeight * zoomLevel;
                kanawan.style.backgroundSize = ${ width }px ${ height } px;
            };


            resizeBackground();


            window.addEventListener('resize', resizeBackground);
        };
    </script>

<script>
</script>
<script>

        var currentHour = new Date().getHours();

        var greetingElement = document.getElementById("greeting");

        if (currentHour >= 0 && currentHour < 12) {
            greetingElement.innerHTML = "<h1>GOOD MORNING</h1>";
        } else if (currentHour >= 12 && currentHour < 18) {
            greetingElement.innerHTML = "<h1>GOOD AFTERNOON</h1>";
        } else {
            greetingElement.innerHTML = "<h1>GOOD EVENING</h1>";
        }
    </script>
    @{
    }
</body>
</html>
