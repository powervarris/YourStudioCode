@{
    ViewData["Title"] = "Verify OTP";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link href="~/fonts/style.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="~/css/first/login.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <header>
    </header>
    <div class="body-bg">
        <div class="row g-0">
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <div class="greeting-container">
                                    <h3 id="greeting"><strong></strong></h3>
                                </div>
                                <form action="#!">
                                    <p class="text-center mb-4">Please enter the One time passcode(OTP) sent to your email.</p>
                                    <div class="row gy-3 overflow-hidden">
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" name="otp" id="otp" placeholder="102941" required>
                                                <label for="text" class="form-label">OTP</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                @if(TempData["verifyOtpError"] != null)
                                                {
                                                    <p style="color: red;">@TempData["verifyOtpError"]</p>
                                                }
                                                <button class="btn btn-primary btn-lg" type="submit" asp-action="verifyOtp" asp-controller="Account">Reset Password</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kanawan col-md-8 col-lg-6">
                <div class="right d-flex align-items-center py-5">
                </div>
            </div>
        </div>
    </div>
    <script>
        window.onload = function () {
            const kanawan = document.querySelector('.kanawan');


            const resizeBackground = () => {
                const zoomLevel = window.devicePixelRatio;
                const width = kanawan.offsetWidth * zoomLevel;
                const height = kanawan.offsetHeight * zoomLevel;
                kanawan.style.backgroundSize = ${ width }px ${ height } px;
            };


            resizeBackground();


            window.addEventListener('resize', resizeBackground);
        };
    </script>
    <script>
        var currentHour = new Date().getHours();

        var greetingElement = document.getElementById("greeting");

        if (currentHour >= 0 && currentHour < 12) {
            greetingElement.innerHTML = "<h1>GOOD MORNING</h1>";
        } else if (currentHour >= 12 && currentHour < 18) {
            greetingElement.innerHTML = "<h1>GOOD AFTERNOON</h1>";
        } else {
            greetingElement.innerHTML = "<h1>GOOD EVENING</h1>";
        }
        var passwordInput = document.querySelector('input[name="password"]');
        var confirmPasswordInput = document.querySelector('input[name="confirmPassword"]');

        passwordInput.addEventListener('input', function () {
            if (passwordInput.value.match(/(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}/)) {
                passwordInput.setCustomValidity('');
            } else {
                passwordInput.setCustomValidity('Password must contain at least 1 uppercase, 1 number, and should be more than 8 characters long.');
            }
        });

        confirmPasswordInput.addEventListener('input', function () {
            if (confirmPasswordInput.value === passwordInput.value) {
                confirmPasswordInput.setCustomValidity('');
            } else {
                confirmPasswordInput.setCustomValidity('Password and Confirm Password must match.');
            }
        });
    </script>
</body>
</html>