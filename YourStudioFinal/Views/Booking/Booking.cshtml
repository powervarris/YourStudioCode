@model List<YourStudioFinal.Models.Booking.BookingModel>
@{
	ViewBag.Title = "Booking";
}

<!DOCTYPE html>
<html>
<head>
	<link href="~/css/booking/Booking.css" rel="stylesheet" />
</head>
<body>

	<div class="Book">
		<div>YOUR BOOKING LIST</div>
	</div>

<div class="form-box">
    <div><strong>Accepted</strong> | Declined | Pending </div>
    <br />

    @{
    if (Model != null)
    {
        foreach (var item in Model)
        {
            if (item.status == "Pending")
            {
    <table class="custom-table">
    <tr>
        <td>Date</td>
        <td>Time</td>
        <td>Customer ID</td>
        <td>Username</td>
        <td>Mobile Number</td>
        <td>Email</td>
        <td>Package</td>
        <td>Price</td>
    </tr>
    <tr>
        <td>@item.date</td>
        <td>@item.time</td>
        <td>N/A</td>
        <td>@item.accountUser.UserName</td>
        <td>@item.accountUser.mobileNumber</td>
        <td>@item.accountUser.Email</td>
        <td>@item.packages</td>
        <td>price</td>
        </tr>
    </table>
                    }
                }
            }
        }
    <br />

        <div class="BtnCont">
