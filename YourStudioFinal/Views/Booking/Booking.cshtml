@model YourStudioFinal.Models.Booking.FilterBookingModel

@{
	ViewBag.Title = "Booking";

    object updateFilter(string filterValue)
    {
        Model.filter = filterValue;
        return null;
    }
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/booking/Book.css" rel="stylesheet" />
</head>
<body>

    <section class="containers">
        <div class="Book">
            <div>YOUR BOOKING LIST</div>
        </div>
    </section>
<section class="containers">
<div class="form-box">
    <button onclick='@updateFilter("Pending")'>
        Pending
    </button>
    |
    <button onclick='@updateFilter("Accepted")'>
        Accepted
    </button>
    |
    <button onclick='@updateFilter("Rejected")'>
        Declined
    </button>
    <br/>

    @{
        if (Model != null)
        {
            foreach (var item in Model.bookings)
            {
                if (item.status == Model.filter)
                {
                    <table class="custom-table">
                        <tr>
                            <td>Date</td>
                            <td>Time</td>
                            <td>Customer ID</td>
                            <td>Username</td>
                            <td>Mobile Number</td>
                            <td>Email</td>
                            <td>Package</td>
                            <td>Price</td>
                        </tr>
                        <tr>
                            <td>@item.date</td>
                            <td>@item.time</td>
                            <td>N/A</td>
                            <td>@item.accountUser.UserName</td>
                            <td>@item.accountUser.mobileNumber</td>
                            <td>@item.accountUser.Email</td>
                            <td>@item.packages</td>
                            <td>price</td>
                        </tr>
                    </table>
                }
            }
        }
    }
    <br/>

    <div class="BtnCont">
        <div id="RmvBtn">REMOVE</div>
    </div>
</div>
</section>
</body>
</html>

<footer>
    <div class="footer-container">
        <hr />
        <div class="social-icons">
            <a href="#" target="_blank"><i class="fas fa-envelope fa-2x"></i></a>
            <a href="#" target="_blank"><i class="fab fa-facebook-f fa-2x"></i></a>
            <a href="#" target="_blank"><i class="fab fa-instagram fa-2x"></i></a>
        </div>
    </div>
