@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<YourStudioFinal.Models.Booking.BookingModel>

@{
    ViewBag.Title = "Booking List";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/Booking/BookList.css">
    <link rel="stylesheet" href="~/css/Booking/jquery.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <div class="navbar-header">
                    <span>
                        <span onclick="openNav()">
                            <a class="nav-link active d-flex align-items-center" aria-current="page" href="#">
                                <i class="fas fa-bars pe-2 menu"></i>
                        </span>
                        <img src="~/photos/logo.png" class="logonav" alt="">
                        <img src="~/photos/logo2.png" class="logonav2" alt="">
                    </span>
                </div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto ">
                        <li class="nav-item">
                            <a class="nav-link">
                                <div class="wrapper-navbar-menu">
                                    <div class="collapse navbar-collapse" id="navbarSupportedContent">


                                        <ul class="navbar-nav me-3">
                                            <li>
                                                <div id="mySidenav" class="sidenav">
                                                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                                                    <a> @(ViewBag.isLogged ? ViewBag.User.UserName : "Username")</a>
                                                    <a>@(ViewBag.isLogged ? ViewBag.User.Email : "Email")</a>
                                                    <a>@(ViewBag.isLogged ? ViewBag.User.mobileNumber : "Mobile Number")</a>
                                                    <a asp-controller="Home" asp-action="Logout">Logout</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <script>
                                    function openNav() {
                                        document.getElementById("mySidenav").style.width = "250px";
                                    }

                                    function closeNav() {
                                        document.getElementById("mySidenav").style.width = "0";
                                    }
                                </script>
                                <span>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto navbar-right">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="GalleryCustomer" asp-action="Index">Gallery</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Gallery
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="GalleryCustomer" asp-action="Index">User Gallery UI</a>
                                    <a class="dropdown-item" asp-controller="Gallery" asp-action="Index">Admin Gallery</a>
                                </div>
                            </li>
                        }
                        <li class="nav-item active ">
                            <a class="nav-link" asp-controller="Packages" asp-action="Index">Packages</a>
                        </li>

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Booking</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Booking" asp-action="Index">Create Booking</a>
                                    <a class="dropdown-item" asp-controller="Booking" asp-action="Booking">Inquiry List</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Inquiry</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Inquiry" asp-action="clientInquiry">Create Booking</a>
                                    <a class="dropdown-item" asp-controller="Inquiry" asp-action="Inquirylist">Inquiry List</a>
                                </div>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Booking
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Booking" asp-action="Index">Create Booking</a>
                                    <a class="dropdown-item" asp-controller="Booking" asp-action="BList">Review Customer Booking</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Inquiry</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-controller="Inquiry" asp-action="clientInquiry">Create Inquiry</a>
                                    <a class="dropdown-item" asp-controller="Inquiry" asp-action="Inquirylist">Inquiry List</a>
                                </div>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#!"><i class="fas fa-bell pe-2"></i></a>
                        </li>

                        @if (ViewBag.isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Logout"><i class="fa-solid fa-door-open"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Index"><i class="fa-solid fa-door-closed"></i></a>
                            </li>
                        }

                    </ul>

                    <script>
                        $(document).ready(function () {
                            $('.nav-link.dropdown-toggle').on('click', function (e) {
                                e.preventDefault();
                                $(this).next('.dropdown-menu').slideToggle();
                            });
                        });
                    </script>

                </div>
            </div>
        </nav>
    </header>

    <section class="Book">
        <div id="YB">YOUR BOOKING</div>
        <div id="VL"></div>
        @* <div id="btn1" class="blist" data-original-color="white">August 05, 2023 | Saturday - 1:30 pm</div> *@
        @* <div id="btn2" class="blist" data-original-color="white">September 06, 2023 | Saturday - 2:30 pm</div> *@
        @{
            @foreach (var item in Model.OrderByDescending(x => x.dateCreated).Select((value, i) => (value, i)))
            {
                <div id="@("btn" + item.i)" class="blist" data-original-color="white" onclick="clickHandler(this.id)">@item.value.accountUser.UserName @item.value.date @item.value.time</div>
            }
        }
    </section>

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
            </div>
            <div class="row">
                <div class="col-md-10">
                    <div id="datepicker"></div>
                </div>
            </div>
        </div>

    </section>
    <section class="time-container">
        <section class="time" style="display: inline-block;">
            <div class="btn-row">
                <div class="btnT" data-original-color="white" id="btnT_0930">09:30 am</div>
                <div class="btnT" data-original-color="white" id="btnT_1000">10:00 am</div>
            </div>
            <div class="btn-row">
                <div class="btnT" data-original-color="white" id="btnT_1030">10:30 am</div>
                <div class="btnT" data-original-color="white" id="btnT_1100">11:00 am</div>
            </div>
            <div class="btn-row">
                <div class="btnT" data-original-color="white" id="btnT_1300">01:30 pm</div>
                <div class="btnT" data-original-color="white" id="btnT_1400">02:00 pm</div>
            </div>
            <div class="btn-row">
                <div class="btnT" data-original-color="white" id="btnT_1430">02:30 pm</div>
                <div class="btnT" data-original-color="white" id="btnT_1500">03:00 pm</div>
            </div>
            <div class="btn-row">
                <div class="btnT" data-original-color="white" id="btnT_1530">03:30 pm</div>
                <div class="btnT" data-original-color="white" id="btnT_1600">04:00 pm</div>
            </div>
        </section>
    </section>

    <section>
        @{
            // this code block will display all of the bookings per month
        }
    </section>

    <section id="Srvc">
        @{
            foreach (var item in Model.Select((value, i) => (value, i)))
            {
                <div id="@("srvc" + item.i)" style="display: none">
                    <div id="VL2"></div>
                    <div id="SrvcDtl">Booking Details</div>
                    <div>
                        <h6><b>Date and Time: </b> @item.value.date @item.value.time</h6>
                    </div>
                    <div>
                        <h6><b>Client: </b> @item.value.accountUser.UserName</h6>
                    </div>
                    <div>
                        <h6><b>Contact Details: </b> @item.value.accountUser.Email</h6>
                    </div>
                    <div>
                        <h6><b>Your Package: </b> @item.value.packages</h6>
                    </div>
                    <div>
                        <h6><b>Add-ons: </b>@item.value.addOns</h6>
                    </div>
                    <div>
                        <h6><b>Total: </b> @(Convert.ToInt32(item.value.packages) + Convert.ToInt32(item.value.addOns))</h6>
                    </div>
                    <div>
                        <h6><b>Status: @item.value.status</b></h6>
                    </div>
                    <div>
                        <h6><b>Payment Details: </b></h6>
                    </div>
                    @* <div>@item.value.accountUser.Contact</div> *@
                    @* <div>@item.value.accountUser.PackagePrice</div> *@
                    <hr />
                    <form>
                        @Html.ActionLink("Accept", "acceptBooking", "Booking", new { id = item.value.Id, email = item.value.accountUser.Email }, new { @class = "btn btn-primary inline", @id = "btnG" })
                        @Html.ActionLink("Decline", "rejectBooking", "Booking", new { id = item.value.Id }, new { @class = "btn btn-primary inline", @id = "btnR" })
                        <button type="button" class="btn btn-primary inline" id="btnBL">Edit</button>
                        @Html.ActionLink("Delete", "deleteBooking", "Booking", new { id = item.value.Id }, new { @class = "btn btn-primary inline", @id = "btnGR" })
                    </form>
                </div>
            }
        }
    </section>

    @section scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    }

