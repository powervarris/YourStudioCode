                <!-- Column 1 -->
                    <div class="col-12 col-sm-10 col-md-4 mb-4 mb-md-0">
                        <div class="card-body p-3 p-md-4 p-xl-5" style="position: relative;">

                            <div class="form-floating mb-3">
