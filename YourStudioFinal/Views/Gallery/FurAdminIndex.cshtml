<body>
    <header>

       
    </header>

    <main>
        <h1 class="text-center">
            <span class="gall">GALLERY</span>

        </h1>
        <br />
        
    

    <div class="text-center">
        <div class="nav2list-position">
            <ul class="nav2list">
                <li class="nav2">
                
                    @Html.ActionLink("All", "Index", "Gallery", null, new { @class = "black-text" }) &nbsp;         |
                </li>
                <li class="nav2">
                    &nbsp; @Html.ActionLink("SoloIto", "SoloAdminIndex", "Gallery", null, new { @class = "black-text" })  &nbsp;    |
                </li>
                <li class="nav2">
                    &nbsp; @Html.ActionLink("Family", "FamilyAdminIndex", "Gallery", null, new { @class = "black-text" })   &nbsp;     |
                </li>
                <li class="nav2">
                    &nbsp; @Html.ActionLink("Duo", "FurAdminIndex", "Gallery", null, new { @class = "black-text" })  &nbsp;       |
                
                </li>
                <li class="nav2">
                    &nbsp;  @Html.ActionLink("Barkada", "CoupleAdminIndex", "Gallery", null, new { @class = "black-text" }) &nbsp;
                
                </li>

            </ul>


        </div>
    </div>



    <div class="wrap">
        <div class="btn-size">
            <div class="dropdown">
                <button class="button" type="button" data-toggle="modal" data-target="#exampleModalCenter">
                    Add
                </button>
                <button class="button1" type="button" onclick="setDelete()">
                    Delete
                </button>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title uploadheader" id="exampleModalLongTitle">Upload Images</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="imageUpload" enctype="multipart/form-data" asp-action="Upload">
                        <label for="category" class="categoryheader">Category:</label>
                        <select name="category" id="category" value="None" class="categoryselect" form="imageUpload">
                            <option value="None"> - Choose - </option>
                            <option value="Solo">Solo</option>
                            <option value="Family">Family</option>
                            <option value="Fur Families">Fur Families</option>
                            <option value="Couples">Couples</option>
                            <option value="Child">Child</option>
                        </select>
                        <p style="text-align:center; font-size:17px; color:grey">Maximum size limit is 1 Gigabyte..</p>
                        <div class="inlinedisplay">
                            <label for="image" class="imageuploadheader">Choose Files:</label>

                            <input type="file" name="image" id="image" class="form-control-file" accept="image/*" multiple />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="buttonupload">Upload</button>
                        </div>
                    </form>

                </div>
               
            </div>
        </div>
    </div>


        <!-- JavaScript Section -->
        <script>
           

		// JavaScript to handle the upload button click
                $('#uploadBtn').click(function () {
                    // Get the file input element
                    const fileInput = document.getElementById('imageUpload');

                    // Check if a file is selected
                    if (fileInput.files.length > 0) {
                        const file = fileInput.files[0];
                        console.log('Uploading file:', file.name);

                        // Here you can perform your file upload logic
                        // For demonstration, we'll just alert a message
                        alert('File uploaded: ' + file.name);

                        // You can also close the modal after upload
                        $('#addModal').modal('hide');
                    } else {
                        // No file selected, you can handle this case as needed
                        alert('Please select a file.');
                    }
            });
        </script>



<div class="container">
        @{
            if (Model.GalleryFiles.Count == 0)
            {
                <text>
                    <p class="noitems"> No items found </p>
                </text>
            }
            else
            {
                <form id="deleteContent" method="post">
                @for (int i = 0; i < Model.GalleryFiles.Count; i++)
                {
                <div class="responsive">
                    <input type="checkbox" data-id=@Model.GalleryFiles[i].Id onclick="setDelete"/>
                    <div class="gallery">
                        <a target="_blank">
                            <img src="@System.IO.Path.Combine("../uploads", Model.GalleryFiles[i].fileName)" alt="Forest" width="600" height="400">
                            @* <img src="@(System.IO.Path.Combine("uploads", Model.GalleryFiles[i].fileName).TrimEnd() + ".ashx?w=600&h=400")" alt="Forest" width="600" height="400"> *@
                        </a>
                    </div>
                </div>
                }
            </form>
            }
        }
    </div>
    </main>
    


  






    <script src="https://cdjns.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


	<script>
        setDelete = function () {
        var checked = document.querySelectorAll('input[type="checkbox"]:checked');
        var deleteContent = document.getElementById('deleteContent');
        
        if (checked.length === 0) {
            alert('Please select at least one item to delete.');
        }
        else {
        deleteContent.action = '/Gallery/Delete?ids=' + Array.from(checked).map(x => x.getAttribute('data-id')).join(',');
        deleteContent.submit();
        }
    }
</script>



