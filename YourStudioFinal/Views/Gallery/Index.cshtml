        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Upload Image</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                       <form id="imageUpload" enctype="multipart/form-data" asp-action="Upload"> 
                                       <input type="file" name="image" id="image" class="form-control-file" accept="image/*" multiple/>
                                       <button type="submit" class="btn btn-primary">Upload</button>
                                   </form> 
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Upload Image</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- JavaScript Section -->
        <script>
            $(document).ready(function () {
                // Toggle dropdown on Manage Content button click
                $('#manageContentBtn').click(function () {
                    $('#dropdownMenu').toggle();
                });

                // Close dropdown when clicking outside
                $(document).click(function (event) {
                    var $target = $(event.target);
                    if (!$target.closest('#manageContentBtn').length &&
                        !$target.closest('#dropdownMenu').length) {
                        $('#dropdownMenu').hide();
                    }
                });

                // JavaScript to handle the upload button click
                $('#uploadBtn').click(function () {
                    // Get the file input element
                    const fileInput = document.getElementById('imageUpload');

                    // Check if a file is selected
                    if (fileInput.files.length > 0) {
                        const file = fileInput.files[0];
                        console.log('Uploading file:', file.name);

                        // Here you can perform your file upload logic
                        // For demonstration, we'll just alert a message
                        alert('File uploaded: ' + file.name);

                        // You can also close the modal after upload
                        $('#addModal').modal('hide');
                    } else {
                        // No file selected, you can handle this case as needed
                        alert('Please select a file.');
                    }
                });
            });
        </script>
