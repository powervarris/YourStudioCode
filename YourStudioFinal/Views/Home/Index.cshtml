                                        }
                                    </script>
                                    <span>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto navbar-right">
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            
                            @if (User.IsInRole("User") || ViewBag.isLogged == false)
                            {
